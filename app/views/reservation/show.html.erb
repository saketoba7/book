<div class="container show">
    <div class="show-detail">
        <div class="show-image">
            <% if @reservation.post.images? %>
                <%= image_tag @reservation.post.images.url , class: "room-image" %>
            <% else %>
                <%= image_tag "default_post.jpg", class: "room-image" %>
           <% end %>
        </div>
        <div class="show-profile">
            <div class="show-name">
                <p class="name"><%= @reservation.room.post_name %></p>
                <p class="addres"><%= @reservation.room.room_address %></p>
            </div>
        </div>
       
        <button class="show-btn create-btn">
            <%= link_to "予約済みルーム一覧", reservations_path ,class: "btn-font" %>
        </button>
</div> 